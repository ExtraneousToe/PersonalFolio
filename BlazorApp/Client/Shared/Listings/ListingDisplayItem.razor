<div class="border listing-item">
    @if (ListingItem == null)
    {
        <span class="alert">No ListingItem applied to component</span>
    }
    else
    {
        <h4><a href="@($"{Page}/{ListingItem.NameWithoutWhitespace}")">@ListingItem.Name</a></h4>
        <div>
            <strong>Status:</strong> @ListingItem.StatusAsString
            @if (!string.IsNullOrEmpty(ListingItem.StatusNotes))
            {
                <span>
                    - <i>@ListingItem.StatusNotes</i>
                </span>
            }
        </div>
    <br />
    <div>
        <h5>Links:</h5>
        @if (!string.IsNullOrEmpty(ListingItem.RepositoryLink))
        {
            <div>
                <a href="@ListingItem.RepositoryLink" target="_blank">
                    Repository Page
                </a>
            </div>
        }
        @if (!string.IsNullOrEmpty(ListingItem.GHPagesLink))
        {
            <div>
                <a href="@ListingItem.GHPagesLink" target="_blank">
                    GitHub Pages Page
                </a>
            </div>
        }
    </div>
    }
</div>

@code {
    [Parameter]
    public string Page { get; set; }

    [Parameter]
    public Listing ListingItem { get; set; }
}