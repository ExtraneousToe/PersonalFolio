<div class="border listing-item">
    @if (ListingItem == null)
    {
        <span class="alert">No ListingItem applied to component</span>
    }
    else
    {
        <div><a href="@($"{Page}/{ListingItem.NameWithoutWhitespace}")">@ListingItem.Name</a></div>
        <div>
            @foreach (string para in ListingItem.Description)
            {
                <p>
                    @para
                </p>
            }
        </div>
        <div>@ListingItem.RepositoryLink</div>
        <div>@ListingItem.GHPagesLink</div>
        <div>@ListingItem.StatusAsString</div>
    }
</div>

@code {
    [Parameter]
    public string Page { get; set; }

    [Parameter]
    public Listing ListingItem { get; set; }
}